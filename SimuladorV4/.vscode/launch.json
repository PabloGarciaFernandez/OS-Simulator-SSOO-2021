    "version": "0.2.0",
    "configurations": [
        {
            "name": "gcc-7 - Build and debug active file",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Simulator",
            "args": ["programV4-11", "20", "programV4-12", "20", "programV4-13", "20", "programV4-14", "10", "programV4-15", "50"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "C/C++: gcc-7 build active file",
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}